{
  "name": "Swift",
  "image": "swift:6.2",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "lldb.library": "/usr/lib/liblldb.so"
      },
      "extensions": [
        "swiftlang.swift-vscode"
      ]
    }
  },
  "remoteUser": "root"
}
